{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5-mini",
  "instructions": [
    "AGENTS.md",
    "prompts/marvin-system.md"
  ],
  "permission": {
    "bash": {
      "git *": "deny",
      "gh *": "deny",
      "glab *": "deny"
    }
  },

  "mcp": {
    "memento": {
      "type": "local",
      "command": ["npx", "-y", "@gannonh/memento-mcp"]
    },
    "time": {
      "type": "local",
      "command": ["uvx", "mcp-server-time"]
    },
    "cargo": {
      "type": "local",
      "command": ["cargo-mcp", "serve"]
    }
  },

  "provider": {
    "openai": {
      "options": {
        "tools": [ { "type": "web_search_preview" } ]
      },
      "models": {}
    }
  }
}
