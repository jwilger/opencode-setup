{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.1-mini",
  "instructions": ["AGENTS.md"],
  "permission": {
    "bash": {
      "git *": "deny",
      "gh *": "deny",
      "glab *": "deny",
    },
    "read": {
      "~/.config/opencode/instructions/*": "allow",
    },
  },

  "mcp": {
    "memento": {
      "type": "local",
      "command": ["npx", "-y", "@gannonh/memento-mcp"],
    },
    "time": {
      "type": "local",
      "command": ["uvx", "mcp-server-time"],
    },
    "cargo": {
      "type": "local",
      "command": ["cargo-mcp", "serve"],
    },
  },

  "provider": {
    "openai": {
      "options": {
        "tools": [{ "type": "web_search_preview" }],
      },
      "models": {
        "gpt-5.1-low": {
          "id": "gpt-5.1",
          "options": { "reasoningEffort": "low" },
        },
        "gpt-5.1-medium": {
          "id": "gpt-5.1",
          "options": { "reasoningEffort": "medium" },
        },
        "gpt-5.1-high": {
          "id": "gpt-5.1",
          "options": { "reasoningEffort": "high" },
        },
        "gpt-5.1-mini-low": {
          "id": "gpt-5.1-mini",
          "options": { "reasoningEffort": "low" },
        },
        "gpt-5.1-mini-medium": {
          "id": "gpt-5.1-mini",
          "options": { "reasoningEffort": "medium" },
        },
        "gpt-5.1-mini-high": {
          "id": "gpt-5.1-mini",
          "options": { "reasoningEffort": "high" },
        },
        "gpt-5.1-codex-low": {
          "id": "gpt-5.1-codex",
          "options": { "reasoningEffort": "low" },
        },
        "gpt-5.1-codex-medium": {
          "id": "gpt-5.1-codex",
          "options": { "reasoningEffort": "medium" },
        },
        "gpt-5.1-codex-high": {
          "id": "gpt-5.1-codex",
          "options": { "reasoningEffort": "high" },
        },
      },
    },
  },
}
