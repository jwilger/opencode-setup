{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.1",
  "small_model": "openai/gpt-5.1-mini",
  "instructions": ["AGENTS.md"],
  "permission": {
    "bash": {
      "git *": "ask",
      "gh *": "ask",
      "glab *": "ask",
      "git add": "allow",
      "git add *": "allow",
      "git commit": "allow",
      "git commit *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git rev-parse": "allow",
      "git rev-parse *": "allow",
      "git describe": "allow",
      "git describe *": "allow",
      "git remote get-url": "allow",
      "git remote get-url *": "allow",
      "git fetch": "allow",
      "git fetch *": "allow",
      "git push": "allow",
      "git push *": "allow",
      "git checkout": "allow",
      "git checkout *": "allow",
      "git switch": "allow",
      "git switch *": "allow",
      "git rm": "allow",
      "git rm *": "allow",
      "git stash": "allow",
      "git stash *": "allow",
    },
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask",
    "read": {
      "~/.config/opencode/instructions/*": "allow",
    },
  },

  "mcp": {
    "memento": {
      "type": "local",
      "command": ["npx", "-y", "@gannonh/memento-mcp@0.3.9"],
    },
  },
}
